div.row-fluid
  div.span9
    div#map.mapBounds
    script(type='text/javascript').
      var centerOn = -1;

      $(window).resize(function() {
        resize();
      });

      $(document).ready( function(){
        resize();

        var opts = {
          center: new google.maps.LatLng(37.062482, -95.677139),
          zoom: 4,
          mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        map = new google.maps.Map( document.getElementById("map"), opts );

        socket.event.subs.begin = function(data){
          $('#centerList tr').remove();
          $('#centerList')
            .append( $('<tr>')
              .append( $('<td>')
                .append( $('<label>')
                  .attr( 'class', 'radio' )
                  .append( $('<input>')
                    .attr( 'type', 'radio' )
                    .attr( 'name', 'centerOn' )
                    .attr( 'value', 'none' )
                    .attr( 'checked', true ) )
                  .append( ' None' ) ) ) );

          $('input:radio[name=centerOn]').last().change(function(){
            centerOn = -1;
          });
        }

        socket.event.subs.each = function(data){
          $('#centerList')
            .append( $('<tr>')
              .append( $('<td>')
                .append( $('<label>')
                  .attr( 'class', 'radio' )
                  .append( $('<input>')
                    .attr( 'type', 'radio' )
                    .attr( 'name', 'centerOn' )
                    .attr( 'value', data ) )
                  .append( ' '+data )
                  .append( $('<a>')
                    .attr( 'href', '#' )
                    .attr( 'onClick', 'socket.emit("unsub","'+data+'");socket.emit("subs");' )
                    .append( '&times;' )
                      .attr( 'class', 'close' ) ) ) ) ); //'btn btn-danger pull-right' ) ) ) ) );

          $('input:radio[name=centerOn]').last().change(function(){
              centerOn = $('input:radio[name=centerOn]:checked').val();
          });
          if (centerOn == data)
            $('input:radio[name=centerOn]').last().attr('checked',true);
        }

        socket.event.data.each = function(key,marker,polyline,info){
          if (key == centerOn)
            map.panTo(marker.getPosition());
        }

        socket.emit('sub', 'ISS');
        socket.emit('subs');

      });

      function add( data ) {
        socket.emit('sub',$('#control input[name=channel]').val());
        $('#control input[name=channel]').val('');
        socket.emit('subs');

      }

  div.span3
    form(id='control', onSubmit="add(); return false;")
      h1 Admin
      p
        | The FreshFinder Admin lets you track where people are searching for markets and what they are saying

