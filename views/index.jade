    script(type='text/javascript').
      var centerOn = -1;

      $(window).resize(function() {
        resize();
      });

      $(document).ready( function(){
        resize();

        var opts = {
          center: new google.maps.LatLng(37.062482, -95.677139),
          zoom: 4,
          mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        map = new google.maps.Map( document.getElementById("map"), opts );

        var markers = [];

        var socket = io.connect('http://localhost:9999');
        socket.emit('watching');
        socket.on('positions', function(positions_hash) {
          console.log('We got positions!');
          // Remove all the existing markers
          for (var i = 0; i < markers.length; i++){
            var marker = markers[i];
            marker.setMap(null);
            delete marker[i];
          }
          var positions_array = positions_hash['positions'];
          for (var i = 0; i < positions_array.length; i++) {
            var position = positions_array[i];
            var coord = new google.maps.LatLng(position.coords.latitude, position.coords.longitude);
            var marker = new google.maps.Marker(
              {
                position: coord,
                map: map,
                title: "Client!"
              });
            marker.setMap(map);
            markers.push(marker);
          }
        })
      });

